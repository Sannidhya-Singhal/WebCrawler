<Window x:Class="WebCrawler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MIDAS Web Crawler" Height="600" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="MIDAS Annotation Web Crawler" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <Button x:Name="BtnSelectFile" Content="Select Input File" 
                    Width="150" Height="40" Click="BtnSelectFile_Click"/>
            <TextBlock x:Name="TxtSelectedFile" Text="No file selected" 
                       VerticalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>

        <!-- NEW: Results Count Selection with TextBoxes -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,20">
            <GroupBox Header="Results Count Settings" Padding="10">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Google Headings Count:" Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtGoogleCount" Width="80" Height="25" 
                                 Text="10" TextAlignment="Center" 
                                 VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Amazon Search Results Count:" Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtAmazonCount" Width="80" Height="25" 
                                 Text="10" TextAlignment="Center" 
                                 VerticalContentAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="TxtLog" IsReadOnly="True" TextWrapping="Wrap" 
                     FontFamily="Consolas" Background="#F5F5F5"/>
        </ScrollViewer>

        <ProgressBar Grid.Row="4" x:Name="ProgressBar" Height="30" 
                     Margin="0,20,0,10" Minimum="0" Maximum="100"/>

        <Button Grid.Row="5" x:Name="BtnStart" Content="Start Crawling" 
                Width="200" Height="50" Click="BtnStart_Click" 
                IsEnabled="False" FontSize="16" FontWeight="Bold"/>
    </Grid>
</Window>
